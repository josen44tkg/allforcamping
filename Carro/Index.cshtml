@using alforcampingv2.Models;
@{
                /**/

                ViewBag.Title = "Index";
}
<body style="background-color: saddlebrown">

    <div style="background-color: burlywood; width:100%" align="center">


        @{ var sub = 0.0; int ca = 0;}

        <div class="container">
            <div class="row">
                <div class="col-md-6 col-xxl-5">
                    <div class="table-responsive">
                        <table class="table">
                            
                            @foreach (Item item in (List<Item>)Session["cart"])
                            {
                                ca = ca + item.cantidad;


                                sub = sub + item.productos.precio_venta * item.cantidad;

                                <thead>

                                    <tr>

                                        <th>Producto</th>
                                        <th>@item.productos.nombre</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Precio unitario:</td>
                                        <td>$@item.productos.precio_venta</td>
                                    </tr>
                                    <tr>
                                        <td>Descripción: Tienda de campaña grande</td>
                                        <td><img src="~/Content/img/tienda.jpg" style="width: 30%;" /></td>
                                    </tr>
                                    <tr>
                                        <td>Disponibles: @item.productos.stock</td>
                                        <td>Cantidad  <input type="number" value="@item.cantidad" style="width:20%" /></td>
                                    </tr>

                                </tbody>
                            }
                        </table>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Total de compra</th>
                                    <th>$@sub</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Cantidad de articulos</td>
                                    <td>@ca</td>
                                </tr>
                                <tr>
                                    <td>Elegir envio</td>
                                    <td>
                                        <div class="form-check"><input type="radio" class="form-check-input" id="formCheck-1" /><label class="form-check-label" for="formCheck-1">Estafeta (3-5 días) Costo: $99.00</label></div>
                                        <div class="form-check"><input type="radio" class="form-check-input" id="formCheck-2" /><label class="form-check-label" for="formCheck-2">DHL (1-2 días) Costo: $159.00</label></div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Elegir forma de pago</td>
                                    <td>
                                        <div class="form-check"><input type="radio" class="form-check-input" id="formCheck-3" /><label class="form-check-label" for="formCheck-3">Tarjeta de crédito/debito </label></div>
                                        <div class="form-check"><input type="radio" class="form-check-input" id="formCheck-4" /><label class="form-check-label" for="formCheck-4">PayPal</label></div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Elegir dirección de entrega</td>
                                    <td>
                                        <div class="form-check"><input type="radio" class="form-check-input" id="formCheck-5" /><label class="form-check-label" for="formCheck-5">Lago Titicaca 204 Nueva Oxtotitlán Cp.50100</label></div>
                                        <div class="form-check"><input type="radio" class="form-check-input" id="formCheck-6" /><label class="form-check-label" for="formCheck-5">Lago Titicaca 204 Nueva Oxtotitlán Cp.50100</label></div>
                                        <div class="form-check"><input type="radio" class="form-check-input" id="formCheck-5" /><label class="form-check-label" for="formCheck-5">Lago Titicaca 204 Nueva Oxtotitlán Cp.50100</label></div><button class="btn btn-primary" type="button" style="padding: 4px 12px;margin: 8px;height: 32px;width: 159.7px;">Comprar</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>



    </div>
</body>

