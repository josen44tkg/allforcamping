@model IEnumerable<AllforCamping.Models.categorias>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: burlywood ">
    <div class="container-fluid h1 text-center">
        <h1>Categorias disponibles</h1>
    </div>
    <div class="container-fluid ">
        <button type="button" class="btn btn-success">@Html.ActionLink("Crear nueva categoría", "Create")</button>
    </div>

    <br />
    <br />

    <div class="container-fluid">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.subcategorias.nombre)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombre)
                    </td>
                    
                    <td>
                        <button type="button" class="btn btn-default"> @Html.ActionLink("Detalles", "Details", new { id = item.Id }) </button>
                        <button type="button" class="btn btn-warning">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</button>
                        <button type="button" class="btn btn-danger">@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</button>

                    </td>
                </tr>
            }

        </table>

    </div>
</div>